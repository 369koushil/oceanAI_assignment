{
  "api_version": "1.0",
  "description": "API documentation for E-Shop Checkout",

  "endpoints": [
    {
      "name": "Apply Coupon",
      "method": "POST",
      "path": "/api/apply_coupon",
      "description": "Validate discount code",
      "request_body": { "code": "string" },
      "valid_codes": {
        "SAVE15": { "type": "percentage", "value": 15 }
      },
      "responses": {
        "success": { "valid": true, "discount": 15 },
        "invalid": { "valid": false, "error": "Invalid discount code" },
        "empty": { "valid": false, "error": "Please enter a discount code" }
      }
    },

    {
      "name": "Submit Order",
      "method": "POST",
      "path": "/api/submit_order",
      "description": "Validate form and cart",
      "required_fields": {
        "name": "string",
        "email": "valid email",
        "address": "string",
        "shipping": "standard|express",
        "payment": "credit-card|paypal"
      },
      "errors": {
        "name": "Please enter your full name",
        "email": "Please enter a valid email address",
        "address": "Please enter your shipping address",
        "empty_cart": "Your cart is empty. Please add items before checkout."
      }
    }
  ]
}
